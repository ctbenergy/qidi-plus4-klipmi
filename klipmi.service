[Unit]
Description=Qidi Plus 4 klipmi TJC-Klipper display service
Documentation=https://github.com/ctbenergy/qidi-plus4-klipmi
After=klipper.service moonraker.service
Wants=udev.target

[Install]
WantedBy=multi-user.target

[Service]
Type=simple
User=%USER%
RemainAfterExit=yes
WorkingDirectory=%KLIPMI_DIR%
ExecStartPre=/usr/bin/env bash -c 'sleep 10'
ExecStart=%KLIPMI_DIR%/.venv/bin/python src/main.py
Restart=always
RestartSec=10
